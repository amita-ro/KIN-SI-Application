<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/navy"
    android:padding="20dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFC56D"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:contentPadding="0dp"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:alpha="1"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/chefname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/iv_profile"
                android:text="Chefname"
                android:textColor="@color/navy"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_toEndOf="@id/iv_profile"
                android:text="Chef"
                android:textColor="@color/navy"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                android:text="Foodname"
                android:textColor="@color/navy"
                android:textSize="22sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/food_pic_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_below="@id/foodname"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="#21232B"
                android:layout_centerInParent="true"
                app:cardCornerRadius="10dp"
                app:contentPadding="0dp">

                <ImageView
                    android:id="@+id/food_pic"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_gravity="center"
                    android:alpha="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_bg" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/food_pic_frame"

                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/white"
                android:text="LOCATION"
                android:textColor="@color/navy" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/food_pic_frame"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="55dp"
                android:layout_toEndOf="@+id/bt_location"
                android:backgroundTint="@color/white"
                android:text="123"
                android:textColor="@color/navy" />


        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>

</LinearLayout>